  <div class="container-fluid">
  
    <a class="navbar-brand active text-warning" href="#">Progresql</a>
    <div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active text-white" aria-current="page" <%=link_to "Home", root_path %></a>
        </li>
        <li class="nav-item text-black">
          <a class="nav-link active text-white" aria-current="page" <%=link_to "Posts", posts_path %></a>
        </li>
        <li class="nav-item text-black">
          <a class="nav-link active text-white" aria-current="page" <%=link_to "New Post", new_post_path %></a>
